(defwindow example
	:monitor 0
	:geometry (geometry :x "0%"
		:y "0px"
		:width "100%"
		:height "30px"
		:anchor "top center")
	:stacking "fg"
  :exclusive true
  (greeter :text "Say hello" :name "Tim"))

(defwidget greeter [?text name]
  (box :orientation "horizontal"
    :halfalign "center"
    text
  (button :onclick "notify-send 'Hello' 'Hello, ${name}'" "Greet")))
